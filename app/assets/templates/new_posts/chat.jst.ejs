<form class="post-form">
<div class="fright cancel-post large-text"><span class="glyphicon glyphicon-remove-circle"></span></div>
<div class="new-post-title"><% if (post.id) { %>
	Edit Chat Post.
	<%} else {%>
	New Chat Post.
	<%}%></div>

	<div id="post-errors"></div>
	<input type="hidden" name="post[type]" value="Chat">
		
	<textarea id="chat-text-area" class="form-control" name="post[post_text]" value="" placeholder=""><% if (post.get('post_text')){ %><%=post.get('post_text') %><% } else { %>Hot Dog Vendor: What would you like?
Buddhist Monk: Make me one with everything.<% } %></textarea>	

	<br>
	<button class="btn btn-warning toggle-options fright">Show Advanced Options</button>
	<div id="adv-opt-clear-div" class="clear-div" style="display: none;"></div>
	<div class="advanced-options" style="display: none;">
	<br>
		<div class="input-group">
			<span class="input-group-addon glyphicon glyphicon-globe"></span>
			<input class="form-control" type="text" name="post[custom_url]" value="" placeholder="eg. /Amazing-Blog-Post" id="post-url">
		</div>
		
		<br>
		<div class="input-group">
			<span class="input-group-addon glyphicon glyphicon-user"></span>
			<input class="form-control" type="text" name="post[source_link]" placeholder="Source (optional)" value="">
	  </div>
		
		<br>
		<div class="input-group">
			<span class="input-group-addon glyphicon glyphicon-calendar"></span>
			<input class="form-control" type="date" name="post[publish_date]" value="" placeholder="PUBLISH DATE">
		</div>
	<br>
	</div>

	
	<button class="btn btn-success <% if (post.id) { %>
	update-post
	<%} else {%>
	create-post
	<%}%>"><% if (post.id) { %>
	Update Post
	<%} else {%>
	Create Post
	<%}%></button>
</form>
<% if (post.id === undefined){ %>
<script>
	$(function () {
	
			var defaultText = true
			var $chat = $('#chat-text-area');
			$chat.focus(function(){
				if (defaultText) {
					$chat.val('');
					defaultText = false
				}		
			});
	});
</script>
<% } %>